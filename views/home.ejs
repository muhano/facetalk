<!DOCTYPE html>
<%- include('partials/header', {title: "Home Page"}) %> 
<style>
  .home {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;    
  }

</style>

</head>
<body>
  <%-include("partials/navbars/user")%>

  <div class="home">
    <% if (userNotFound) { %>
      <div><%= userNotFound %>  </div>

    <% } %>

    <%data.forEach (el => {%>
      <div class="card p-2 m-2 bg-light shadow-lg" style="width: 35rem;" >
        <div class="card-title d-flex justify-content-between">
          <h4 class="card-title"><%=el.User.username%> </h4>
          <small class="text-muted"><%= postedTime(el.createdAt)%></small> 
        </div>
        <img src="<%=el.imgUrl%>" class="card-img-top"  alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%=el.title%></h5>
          <p class="card-text"><%=el.content%></p>
          <%if (el.TagId === el.Tag.id ) {%>
          <p class="card-text">#<%=el.Tag.name%></p>

        </div>
      </div>
      <%}%>
    <%})%>
  </div>



</body>
</html>